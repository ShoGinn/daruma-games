{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "incremental": true,
    "module": "ESNext",
    "moduleResolution": "Node10",
    "outDir": "./build",
    "removeComments": true,
    "sourceMap": true,
    "target": "ESNext"
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "eslint.config.mjs"]
}
