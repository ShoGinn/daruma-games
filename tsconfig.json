{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "incremental": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node10",
    "noImplicitAny": true,
    "outDir": "build/esm",
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*"]
}
