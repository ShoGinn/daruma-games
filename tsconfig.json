{
    "extends": "@tsconfig/strictest/tsconfig.json",
    "compilerOptions": {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "incremental": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "outDir": "build/esm",
        "removeComments": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "lib": ["ESNext"],
        "target": "ESNext"
    },
    "exclude": [
        "coverage",
        "build",
        "node_modules",
        "__mocks__",
        "__tests__",
        "test",
        "tests",
        "jest.config.mjs"
    ]
}
