{
    "name": "daruma-games",
    "version": "1.15.0",
    "private": true,
    "description": "Algodaruma Server Bot for NFT games!",
    "license": "MIT",
    "type": "module",
    "main": "./build/main.js",
    "scripts": {
        "build": "npm run clean && tsc",
        "clean": "rimraf ./build ./coverage",
        "test:watch": "npm run jest -- --watch",
        "test": "npx jest --runInBand --detectOpenHandles --colors --reporters=default",
        "dev": "node --loader ts-node/esm/transpile-only src/Main.ts",
        "lint": "eslint src --ext .ts --max-warnings 0",
        "lint:fix": "eslint src --ext .ts --fix",
        "prettier": "prettier --config .prettierrc --write src",
        "pretty:lint": "npm run prettier && npm run lint:fix",
        "start": "node build/src/main.js",
        "update_deps": "npx npm-check-updates"
    },
    "dependencies": {
        "@discordx/importer": "~1.1.10",
        "@discordx/pagination": "~3.4.0",
        "@discordx/utilities": "~5.2.1",
        "@mikro-orm/better-sqlite": "^5.6.11",
        "@mikro-orm/core": "^5.6.11",
        "@mikro-orm/migrations": "^5.6.11",
        "@mikro-orm/mysql": "^5.6.11",
        "@mikro-orm/postgresql": "^5.6.11",
        "@mikro-orm/sql-highlighter": "~1.0.1",
        "algosdk": "^2.1.0",
        "axios": "^1.3.3",
        "cron-parser": "^4.7.1",
        "cron-validator": "^1.3.1",
        "cross-env": "^7.0.3",
        "dayjs": "^1.11.7",
        "discord.js": "~14.7.1",
        "discordx": "~11.7.0",
        "dotenv": "~16.0.3",
        "http-status-codes": "^2.2.0",
        "immutable": "4.2.4",
        "node-cache": "^5.1.2",
        "node-schedule": "^2.1.1",
        "rate-limiter-flexible": "^2.4.1",
        "reflect-metadata": "~0.1.13",
        "toad-scheduler": "^2.2.0",
        "tsyringe": "~4.7.0",
        "typescript-retry-decorator": "^2.2.0",
        "winston": "^3.8.2",
        "winston-transport": "^4.5.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.4.4",
        "@commitlint/config-conventional": "^17.4.4",
        "@jest/globals": "^29.4.3",
        "@mikro-orm/cli": "^5.6.11",
        "@side/jest-runtime": "^1.1.0",
        "@types/jest": "^29.4.0",
        "@types/node": "~18.14.0",
        "@types/node-schedule": "^2.1.0",
        "@typescript-eslint/eslint-plugin": "^5.52.0",
        "@typescript-eslint/parser": "^5.52.0",
        "eslint": "^8.34.0",
        "eslint-config-prettier": "~8.6",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jsdoc": "^40.0.0",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "eslint-plugin-unicorn": "^45.0.2",
        "jest": "^29.4.3",
        "prettier": "^2.8.4",
        "rimraf": "^4.1.2",
        "ts-jest": "^29.0.5",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5"
    },
    "engines": {
        "node": ">=16.16.0",
        "npm": ">=8.11.0"
    },
    "mikro-orm": {
        "configPaths": [
            "./src/mikro-orm.config.ts",
            "./build/mikro-orm.config.js"
        ]
    },
    "jest": {
        "testTimeout": 30000,
        "preset": "ts-jest/presets/default-esm",
        "moduleNameMapper": {
            "^(\\.{1,2}/.*)\\.js$": "$1"
        },
        "transformIgnorePatterns": [],
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/build"
        ],
        "testRegex": "(/__tests__/).*(test|spec)\\.ts",
        "runtime": "@side/jest-runtime",
        "setupFiles": [
            "./tests/utils/setup.ts"
        ],
        "collectCoverageFrom": [
            "src/**/*.{js,jsx,ts,tsx}",
            "!**/*.d.ts",
            "!src/main.ts",
            "!src/mikro-orm.config.ts"
        ],
        "transform": {
            "^.+\\.tsx?$": [
                "ts-jest",
                {
                    "useESM": true
                }
            ]
        }
    }
}
