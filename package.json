{
    "name": "daruma-games",
    "version": "1.16.0",
    "private": true,
    "description": "Algodaruma Server Bot for NFT games!",
    "license": "MIT",
    "main": "build/esm/main.js",
    "module": "build/esm/main.js",
    "type": "module",
    "scripts": {
        "build": "npm run clean && npm run build:esm",
        "build:esm": "tsc",
        "clean": "rimraf build coverage",
        "dev": "node --loader ts-node/esm src/main.ts",
        "lint:fix": "npm run lint -- --fix",
        "lint": "eslint tests src --ext .ts --max-warnings 0",
        "prepare": "npx is-ci || npx husky install",
        "prettier": "prettier --config .prettierrc --write src tests",
        "pretty:lint": "npm run prettier && npm run lint:fix",
        "schema": "npx mikro-orm-esm schema:update",
        "start": "node build/esm/main.js",
        "test:coverage": "npm run test -- --reporters=default --coverage",
        "test:debug": "npm run test -- --runInBand",
        "test": "jest",
        "type-check": "tsc --noemit",
        "update:deps": "npx ncu && npm install"
    },
    "dependencies": {
        "@discordx/importer": "~1.2.2",
        "@discordx/pagination": "~3.4.1",
        "@discordx/utilities": "~5.2.1",
        "@mikro-orm/better-sqlite": "^5.7.12",
        "@mikro-orm/core": "^5.7.12",
        "@mikro-orm/migrations": "^5.7.12",
        "@mikro-orm/mysql": "^5.7.12",
        "@mikro-orm/postgresql": "^5.7.12",
        "@mikro-orm/sql-highlighter": "~1.0.1",
        "algosdk": "^2.4.0",
        "axios": "^1.4.0",
        "cron-parser": "^4.8.1",
        "cron-validator": "^1.3.1",
        "dayjs": "^1.11.9",
        "discord.js": "~14.11.0",
        "discordx": "~11.7.6",
        "dotenv": "~16.3.1",
        "http-status-codes": "^2.2.0",
        "immutable": "4.3.1",
        "lodash": "^4.17.21",
        "node-cache": "^5.1.2",
        "node-schedule": "^2.1.1",
        "rate-limiter-flexible": "^2.4.1",
        "reflect-metadata": "~0.1.13",
        "toad-scheduler": "^3.0.0",
        "tsyringe": "~4.8.0",
        "typescript-retry-decorator": "^2.4.0",
        "winston": "^3.10.0",
        "winston-daily-rotate-file": "^4.7.1",
        "winston-transport": "^4.5.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.6.6",
        "@commitlint/config-conventional": "^17.6.6",
        "@faker-js/faker": "^8.0.2",
        "@jest/globals": "^29.6.1",
        "@mikro-orm/cli": "^5.7.12",
        "@mikro-orm/seeder": "^5.7.12",
        "@types/jest": "^29.5.3",
        "@types/lodash": "^4.14.195",
        "@types/mitm": "^1.3.4",
        "@types/node": "~20.4.2",
        "@types/node-schedule": "^2.1.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.44.0",
        "eslint-config-prettier": "~8.8",
        "eslint-plugin-deprecation": "^1.4.1",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jsdoc": "^46.4.3",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "eslint-plugin-unicorn": "^47.0.0",
        "husky": "^8.0.3",
        "is-ci": "^3.0.1",
        "jest": "^29.6.1",
        "mitm": "^1.7.2",
        "npm-check-updates": "^16.10.15",
        "prettier": "^3.0.0",
        "rimraf": "^5.0.1",
        "ts-jest": "^29.1.1",
        "ts-jest-resolver": "^2.0.1",
        "ts-node": "^10.9.1",
        "typescript": "5.1.6"
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    },
    "mikro-orm": {
        "useTsNode": true,
        "configPaths": [
            "build/src/mikro-orm.config.js"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    }
}
