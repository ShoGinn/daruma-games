{
    "name": "daruma-games",
    "version": "1.15.4",
    "private": true,
    "description": "Algodaruma Server Bot for NFT games!",
    "license": "MIT",
    "main": "build/esm/main.js",
    "module": "build/esm/main.js",
    "type": "module",
    "scripts": {
        "build": "npm run clean && npm run build:esm",
        "build:esm": "tsc",
        "clean": "rimraf build coverage",
        "dev": "node --loader ts-node/esm src/main.ts",
        "lint:fix": "npm run lint -- --fix",
        "lint": "eslint tests src --ext .ts --max-warnings 0",
        "prepare": "husky install",
        "prettier": "prettier --config .prettierrc --write src tests",
        "pretty:lint": "npm run prettier && npm run lint:fix",
        "schema": "npx mikro-orm-esm schema:update",
        "start": "node build/esm/main.js",
        "test:coverage": "npm run test -- --reporters=default --coverage",
        "test:debug": "npm run test -- --runInBand",
        "test": "jest",
        "type-check": "tsc --noemit",
        "update:deps": "npx npm-check-updates -u && npm install"
    },
    "dependencies": {
        "@discordx/importer": "~1.2.1",
        "@discordx/pagination": "~3.4.1",
        "@discordx/utilities": "~5.2.1",
        "@mikro-orm/better-sqlite": "^5.6.14",
        "@mikro-orm/core": "^5.6.14",
        "@mikro-orm/migrations": "^5.6.14",
        "@mikro-orm/mysql": "^5.6.14",
        "@mikro-orm/postgresql": "^5.6.14",
        "@mikro-orm/sql-highlighter": "~1.0.1",
        "algosdk": "^2.1.0",
        "axios": "^1.3.4",
        "cron-parser": "^4.8.1",
        "cron-validator": "^1.3.1",
        "cross-env": "^7.0.3",
        "dayjs": "^1.11.7",
        "discord.js": "~14.7.1",
        "discordx": "~11.7.1",
        "dotenv": "~16.0.3",
        "http-status-codes": "^2.2.0",
        "immutable": "4.3.0",
        "lodash": "^4.17.21",
        "node-cache": "^5.1.2",
        "node-schedule": "^2.1.1",
        "rate-limiter-flexible": "^2.4.1",
        "reflect-metadata": "~0.1.13",
        "toad-scheduler": "^2.2.0",
        "tsyringe": "~4.7.0",
        "typescript-retry-decorator": "^2.2.0",
        "winston": "^3.8.2",
        "winston-transport": "^4.5.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.4.4",
        "@commitlint/config-conventional": "^17.4.4",
        "@faker-js/faker": "^7.6.0",
        "@jest/globals": "^29.5.0",
        "@mikro-orm/cli": "^5.6.14",
        "@mikro-orm/seeder": "^5.6.14",
        "@types/jest": "^29.5.0",
        "@types/lodash": "^4.14.191",
        "@types/mitm": "^1.3.4",
        "@types/node": "~18.15.3",
        "@types/node-schedule": "^2.1.0",
        "@typescript-eslint/eslint-plugin": "^5.55.0",
        "@typescript-eslint/parser": "^5.55.0",
        "eslint": "^8.36.0",
        "eslint-config-prettier": "~8.7",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jsdoc": "^40.0.3",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "eslint-plugin-typescript-sort-keys": "^2.3.0",
        "eslint-plugin-unicorn": "^46.0.0",
        "husky": "^8.0.3",
        "jest": "^29.5.0",
        "mitm": "^1.7.2",
        "prettier": "^2.8.4",
        "rimraf": "^4.4.0",
        "ts-jest": "^29.0.5",
        "ts-jest-resolver": "^2.0.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5"
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    },
    "mikro-orm": {
        "useTsNode": true,
        "configPaths": [
            "build/src/mikro-orm.config.js"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    }
}
