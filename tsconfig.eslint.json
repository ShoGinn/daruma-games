{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "exactOptionalPropertyTypes": false,
    "experimentalDecorators": true,
    "importHelpers": true,
    "incremental": true,
    "module": "ESNext",
    "moduleResolution": "Node10",
    "noImplicitAny": false, // For Tests
    "noImplicitReturns": false, // For Tests
    "outDir": "build/tests",
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": false, // For Tests
    "target": "ESNext"
  },
  "include": ["**/**/*.ts"],
  "exclude": ["node_modules/**/*"]
}
